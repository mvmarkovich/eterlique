extends layouts/layout.pug

block title
    title Корзина | Eterlique

block content
    .breadcrumbs
        ul.breadcrumbs__list
            li.breadcrumbs__list-item
                a.breadcrumbs__list-link(href="main.html") Главная

            li.breadcrumbs__list-item
                a.breadcrumbs__list-link(href="catalog.html") Каталог

            li.breadcrumbs__list-item.is--current
                a.breadcrumbs__list-link(href="basket.html") Корзина

    .main-block
        .basket
            .basket__row
                .basket__table
                    .basket__table-row
                        .basket__table-col
                            .basket__table-col-img--wrap
                                img.basket__table-col-img(src="img/content/basket/item_1.webp" width="283" height="408" alt="Брюки cо стрелками")

                        .basket__table-col
                            .basket__table-col-info
                                h5.basket__table-col-title Брюки cо стрелками

                                .basket__table-col-price.hide-md-up 5 500 ₽

                                ul.basket__table-col-list
                                    li Размер: S
                                    li Цвет: бежевый

                                span.basket__table-col-code Артикул: ET1031

                        .basket__table-col
                            .basket__table-col-nav
                                .basket__table-col-price.hide-md-down 5 500 ₽

                                .input.input--number
                                    span.input__number-down -
                                    input.input__number(type="number" min="1" max="30" value="1" name="product-qty")
                                    span.input__number-up +

                                button.btn.btn--reset.basket__table-col--remove(aria-label="Remove product") Удалить

                    .basket__table-row
                        .basket__table-col
                            .basket__table-col-img--wrap
                                img.basket__table-col-img(src="img/content/basket/item_2.webp" width="283" height="408" alt="Плащ")

                        .basket__table-col
                            .basket__table-col-info
                                h5.basket__table-col-title Плащ

                                ul.basket__table-col-list
                                    li Размер: S
                                    li Цвет: серый

                                span.basket__table-col-code Артикул: ET1031

                        .basket__table-col
                            .basket__table-col-nav
                                .basket__table-col-price 17 000 ₽

                                .input.input--number
                                    span.input__number-down -
                                    input.input__number(type="number" min="1" max="30" value="1" name="product-qty")
                                    span.input__number-up +

                                button.btn.btn--reset.basket__table-col--remove(aria-label="Remove product") Удалить

                .basket__aside
                    .basket__aside-total Итого: 22 500 ₽ 

                    .btn--block
                        a.btn.btn--border.btn--full(href="#") Оформить заказ



                
                

        